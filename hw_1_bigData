drop table hw_2;
create table hw_2 (
id number Primary Key,
name nchar(20),
surname nchar(20) Constraint surnameNotNull not null,
age number(2) Constraint ageUniqueness Unique,
birthDate date,
grades number(4,2),
Constraint nameUniqueness Unique(name)
);

